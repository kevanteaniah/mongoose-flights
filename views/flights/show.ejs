<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>

<main>
  <h1><%= title %> </h1>
  <div id="ticket-details">
  <section id="ticket-deets">
    <div id="one">Airline 
    <div><%= flight.airline %></div>
  </div>
    <div>Airport </div>
    <div><%= flight.airport %></div>
    <div>Flight No. </div>
    <div><%= flight.flightNo %></div>
    <div>Departure Time </div>
    <div><%= flight.departs %></div>
  </section>
</div>
  <h2>tickets</h2>
  <form 
    id="add-review-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-info">Seat:</label>
    <input type="text" name="seat" id="seat-info" required></input>
    <label for="price-info">Price:</label>
    <input type="text" name="seat" id="price-info" required></input>
    <button id="submit" type="submit">Add Ticket</button>
  </form>

  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat No.</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>




<%- include('../partials/footer') %>