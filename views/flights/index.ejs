<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/main.css" />
<%- include('../partials/nav') %>
<main>
<div class="flights-table">
  <h1 id="table-title">Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No.</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach %>
      <% if(error) { %>
        <h2><%= error %></h2>
      <% } %>
      <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <%# finish the ternary expression to display 'Yes' or 'Nope' %> 
        </tr>
      <%# Close the forEach using EJS here %>
      <% }) %>
    </tbody>
  </table>
</div>
</main>
